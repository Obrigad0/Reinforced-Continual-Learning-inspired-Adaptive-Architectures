{
  "seed": 71,
  "experiment": {
    "name": "rcl_permuted_mnist",
    "out_dir": "./runs/rcl_permuted_mnist"
  },
  "training": {
    "device": "cuda",
    "batch_size": 512,
    "epochs_task": 7,
    "lr_task": 0.001,
    "lr_controller": 0.001,
    "lr_value": 0.005,
    "controller_trials": 20,
    "grad_clip": 5.0
  },
  "rcl": {
    "reward_alpha": 0.0003
  },
  "dataset": {
    "_target_": "dataset:PermutedMNISTDataset",
    "data_dir": "./data",
    "num_tasks": 10,
    "permutation_seed": 1900,
    "train_val_split": 0.9,
    "num_workers": 0
  },
  "task_net": {
    "_target_": "task_nets.expandable_mlp:ExpandableMLP",
    "input_dim": 784,
    "hidden_sizes": [
      312,
      128
    ],
    "num_classes": 10,
    "action_spec": [
      30,
      30,
      30
    ]
  },
  "controller": {
    "_target_": "controllers.lstm_controller:LSTMController",
    "hidden_size": 100,
    "num_layers": 2
  },
  "value_net": {
    "_target_": "value_nets.mlp_value:MLPValueNet",
    "hiddensize": 100
  },
  "evaluation": {
    "batch_size": 256,
    "device": "cuda"
  }
}